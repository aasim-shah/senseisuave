<%- include('partials/header', { title: 'Product Details' }) %>

<div class="py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">

            <div class="bg-gray-50 px-4 py-5 sm:px-6">
                <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="w-full h-80 object-cover rounded-lg">
            </div>


            <div class="px-4 py-5 sm:px-6">
               <div class="flex flex-row items-center justify-between">
                <h1 class="text-lg leading-6 font-medium text-gray-900">
                    <%= product.title %>
                </h1>
                <div class="px-4 py-5 sm:px-6 text-center">
                    <button class="py-2 px-4 bg-cyan-800 hover:bg-cyan-700 text-white font-bold rounded-lg text-sm">
                        Add to Bag
                    </button>
                </div>
               </div>

                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Product details and more.
                </p>
            </div>
            <div class="border-t border-gray-200">
                <dl>
                   
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Price
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <%= product.price %>$
                        </dd>
                    </div>
                    <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Description
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <%= product.description %>
                        </dd>
                    </div>
                  
                </dl>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
