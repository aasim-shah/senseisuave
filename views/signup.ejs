<%- include('partials/header', { title: 'Signup' }) %>

<div class="flex justify-center items-center mt-8 min-h-[79vh]">
    <form class="w-full max-w-lg" action="/api/register" method="POST">
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full px-3 mb-6 md:mb-0">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="fullName">
                    Full Name
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="fullName" type="text" placeholder="Full Name" name="fullName" required>
            </div>
            <div class="w-full px-3 mb-6  mt-5">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="username">
                    Email
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="username" type="text" placeholder="Email" name="username" required>
            </div>
            <div class="w-full mt-5 px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="password">
                    Password
                </label>
                <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="password" type="password" placeholder="********" name="password" required>
            </div>
        </div>
        <div class="flex justify-center">
            <button class="shadow bg-cyan-800 hover:bg-cyan-700 w-full focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
                Sign Up
            </button>
        </div>
        <p class="text-sm mt-4 text-center">
            <span>Already Having Account ? </span>
            <a href="/login" class="text-blue-400 ">Login</a>
        </p>
    </form>
</div>

<%- include('partials/footer') %>
