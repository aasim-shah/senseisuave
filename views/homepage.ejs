<%- include('partials/header', { title: 'Home' }) %>





<div class="swiper-container mt-4">
    <div class="swiper-wrapper">
        <div class="swiper-slide h-[50vh] w-[10rem] bg-cyan-700 text-center text-2xl items-center flex justify-center text-white">TOP Offers</div>
        <div class="swiper-slide h-[50vh] w-[10rem] bg-cyan-900 text-center text-2xl items-center flex justify-center text-white">Top Sales</div>
        <div class="swiper-slide h-[50vh] w-[10rem] bg-cyan-600 text-center text-2xl items-center flex justify-center text-white">New Arivals</div>
    </div>
</div>





<div class="py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class=" mb-5 flex flex-row justify-between items-center">
            <h1 class="text-lg font-semibold text-cyan-800 text-start">
                Latest Products
            </h1>
           <a href="/products/new" class="bg-cyan-800 py-1 px-3 rounded-md text-white font-semibold">Add Product</a>
          
        </div>

        <div class="flex flex-wrap gap-2 m-4">
            <% products.forEach(function(product) { %>
            <div class="p-4 md:w-1/3 sm:mb-0 border mb-6">
                <div class="rounded-lg h-64 overflow-hidden">
                   <a href="/products/<%= product._id %>">
                       <img alt="content" class="object-cover object-center h-full w-full" src="<%= product.imageUrl %>">
                    </a>
                </div>
               <div class="flex flex-row justify-between items-end">
                <div class="flex flex-col gap-2">
                    <h2 class="text-xl font-medium title-font text-gray-900 mt-5"><%= product.title %></h2>
                <p class="text-base leading-relaxed mt-2"><%= product.price %>$</p>
                </div>
                <a href="/cart/<%= product._id %>" class="py-1 px-3 rounded-lg bg-cyan-800 text-center text-white">Add To Bag</a>
               </div>
               
            </div>
            <% }); %>
        </div>
    </div>
</div>



<script>
    var swiper = new Swiper('.swiper-container', {
        loop: true,
        autoplay: { 
            delay: 2500,
            disableOnInteraction: false,
        },
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
</script>

<%- include('partials/footer') %>
